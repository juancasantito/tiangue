<div class="main-section">
  <h1>Featured Products</h1>
  <div class="container-fluid deals-section">
    <div class="row">
      <div class="col-md-8">
        <div id="carousel-example-generic" class="carousel slide">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @products.each_with_index do |_, index| %>
            <li data-target="#carousel-example-generic"  data-slide-to="<%= index %>" class="<%= 'active' if index == 0%>"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% @products.each do |product| %>
            <div class="item<%= ' active' if product == @products.first %>">
              <div class="row">
                <div class="col-md-7 col-sm-6 col-xs-12 no-padding">
                  <%= image_tag(product.image_url) %>
                </div>
                <div class="col-md-5 col-sm-6 col-xs-12 no-padding">
                  <div class="text-center featured-product-info">
                    <h2><%= product.name %></h2>
                    <div class="card shadow">
                      <p>
                        <%= product.description %>
                      </p>
                      <p>For only
                        <strong><%= " $" + product.price.to_s %></strong>
                      </p>
                      <a href="<%= product_url(product) %>" class="button orange">
                        Buy Now
                      </a>
                    </div>

                  </div>
                </div>
              </div>
            </div>
            <% end %>
            <!-- Slide -->
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="icon-prev"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="icon-next"></span>
          </a>
        </div>
      </div>

      <div class="col-md-4 col-xs-12 col-sm-12">
        <div class="best-deal text-center">
          <h3>Awesome Deal!</h3>
          <%deal = @products.sample%>
          <%= image_tag(deal.image_url, class: "img-responsive") %>
          <div class="best-deal-info">
            <h4><%= deal.name %></h4>
            <p><%= deal.description %></p>
            <p><strong><%= "$" + deal.price.to_s %><strong></p>
            <a href="<%= product_url(deal) %>" class="button orange">
              Buy Now
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>
