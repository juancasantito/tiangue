<div class="main-section">
  <h1>Welcome to Bike Berlin</h1>
  <h3>Your source for used bikes in Nicaragua</h3>

    <!-- Experimenting with image_tag -->
    <div class="container-fluid">
        <div class="row">
          <% (1..6).each do |n| %>
            <div class="col-sm-4 col-md-2">
              <%= image_tag("bike#{n}.jpg", class: "img-responsive") %>
            </div>
          <%end%>
        </div>
    </div>

    <%= link_to 'New Product', new_product_path %>
</div>
